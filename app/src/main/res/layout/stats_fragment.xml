<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/mySleep"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="2dp"
                android:background="#447393"
                android:gravity="bottom|center"
                android:paddingBottom="20dp"
                android:text="MySleep"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <Button
                android:id="@+id/myLocation"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="2dp"
                android:background="#009688"
                android:gravity="bottom|center"
                android:paddingBottom="20dp"
                android:text="MyLocations"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24dp" />

            <Button
                android:id="@+id/myProductivity"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="2dp"
                android:background="#E91E63"
                android:gravity="bottom|center"
                android:paddingBottom="20dp"
                android:text="MyProductivity"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24dp" />
            <Button
                android:id="@+id/myMeals"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="2dp"
                android:background="@color/percentageFillColor"
                android:gravity="bottom|center"
                android:paddingBottom="20dp"
                android:text="MyMeals"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24dp" />
            <Button
                android:id="@+id/myTasks"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="2dp"
                android:background="@color/percentageTextBackground"
                android:gravity="bottom|center"
                android:paddingBottom="20dp"
                android:text="MyTasks"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24dp" />
            <Button
                android:id="@+id/myMood"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginBottom="2dp"
                android:background="#320141"
                android:gravity="bottom|center"
                android:paddingBottom="20dp"
                android:text="MyMood"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="24dp" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>