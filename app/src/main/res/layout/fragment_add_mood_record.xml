<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mylife_mk3.fragments.AddMoodRecordFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/add_mood_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="Add State"
                android:textSize="24sp" />

            <LinearLayout
                android:id="@+id/add_mood_happy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_mood_title"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Happiness:"
                    android:textSize="18sp" />

                <com.gc.materialdesign.views.Slider
                    android:id="@+id/add_mood_happy_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1E88E5"
                    materialdesign:max="10"
                    materialdesign:min="0"
                    materialdesign:showNumberIndicator="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_mood_distress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_mood_happy"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Stress:"
                    android:textSize="18sp" />

                <com.gc.materialdesign.views.Slider
                    android:id="@+id/add_mood_stress_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1E88E5"
                    materialdesign:max="10"
                    materialdesign:min="0"
                    materialdesign:showNumberIndicator="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_mood_pain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_mood_distress"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Pain:"
                    android:textSize="18sp" />

                <com.gc.materialdesign.views.Slider
                    android:id="@+id/add_mood_pain_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1E88E5"
                    materialdesign:max="10"
                    materialdesign:min="0"
                    materialdesign:showNumberIndicator="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_mood_fear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_mood_pain"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Fear:"
                    android:textSize="18sp" />

                <com.gc.materialdesign.views.Slider
                    android:id="@+id/add_mood_fear_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1E88E5"
                    materialdesign:max="10"
                    materialdesign:min="0"
                    materialdesign:showNumberIndicator="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_mood_anger"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_mood_fear"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Anger:"
                    android:textSize="18sp" />

                <com.gc.materialdesign.views.Slider
                    android:id="@+id/add_mood_anger_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1E88E5"
                    materialdesign:max="10"
                    materialdesign:min="0"
                    materialdesign:showNumberIndicator="true" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/add_mood_energy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_mood_anger"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Energy:"
                    android:textSize="18sp" />

                <com.gc.materialdesign.views.Slider
                    android:id="@+id/add_mood_energy_slider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#1E88E5"
                    materialdesign:max="10"
                    materialdesign:min="0"
                    materialdesign:showNumberIndicator="true"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/add_mood_date"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_below="@id/add_mood_energy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="11/12/2017"
                android:textSize="18sp" />

            <Button
                android:id="@+id/add_mood_time"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_mood_date"
                android:layout_centerHorizontal="true"
                android:text="12:59:00"
                android:textSize="18sp" />

            <Button
                android:id="@+id/add_mood_submit"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/add_mood_time"
                android:layout_centerHorizontal="true"
                android:text="Log State"
                android:textSize="18sp"
                android:textAllCaps="false"/>
        </RelativeLayout>

    </ScrollView>


</FrameLayout>

