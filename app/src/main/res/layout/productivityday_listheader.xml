<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:plainpie="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:layout_gravity="center"
    android:paddingTop="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--tools:context="com.example.mylife_mk3.fragments.ProductivityDayFragment">-->


    <az.plainpie.PieView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:foregroundGravity="center"
        android:id="@+id/dayPieView"
        plainpie:inner_pie_padding="30"
        plainpie:percentage="100"
        plainpie:inner_text="No"
        plainpie:percentage_size="40"
        android:layout_centerHorizontal="true"
        android:visibility="visible"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/dayPieView"
        android:id="@+id/productive_Text"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Records"
        android:fontFamily="monospace"
        android:gravity="center"
        android:foregroundGravity="center"
        android:visibility="visible"
        android:textSize="25sp"/>
    </RelativeLayout>